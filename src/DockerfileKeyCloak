FROM quay.io/keycloak/keycloak:latest as builder

WORKDIR /opt/keycloak

# Sao chép theme vào thư mục themes của KeyCloak
COPY ./src/KeyCloakTheme /opt/keycloak/themes/elis-theme

# Tối ưu hóa KeyCloak cho production
RUN /opt/keycloak/bin/kc.sh build

FROM quay.io/keycloak/keycloak:latest

# Sao chép build đã tối ưu từ stage trước
COPY --from=builder /opt/keycloak/ /opt/keycloak/

# Sao chép theme vào thư mục themes của KeyCloak final image
COPY ./KeyCloakTheme /opt/keycloak/themes/vpdk-theme

# Thiết lập quyền truy cập
USER 1000

# Thiết lập biến môi trường
ENV KC_HEALTH_ENABLED=true
ENV KC_METRICS_ENABLED=true
ENV KC_HOSTNAME_STRICT=false
ENV KC_HTTP_ENABLED=true
ENV KC_PROXY=edge
ENV KC_THEME=elis-theme

# Chạy KeyCloak server và sử dụng theme mới
ENTRYPOINT ["/opt/keycloak/bin/kc.sh", "start", "--theme=elis-theme"]
