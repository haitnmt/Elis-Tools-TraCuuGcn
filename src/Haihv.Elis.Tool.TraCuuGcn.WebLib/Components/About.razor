
<MudIconButton Color="Color.Info" 
        Icon="@Icons.Material.Filled.Info" 
        Size="Size.Small" 
        OnClick="OnClick"/>
<MudPopover OverflowBehavior="OverflowBehavior.FlipNever" Open="_isOpen" AnchorOrigin="Origin.TopRight" TransformOrigin="Origin.BottomRight" Class="pa-1">
    <MudAlert Variant="Variant.Outlined" Severity="Severity.Info" NoIcon="true">
        <MudStack>
            <MudText Typo="Typo.caption">
                Hệ thống đang trong quá trình phát triển
            </MudText>
            <MudHidden Breakpoint="Breakpoint.MdAndUp">
                <Version/>
            </MudHidden>
            <MudText Typo="Typo.caption">
                Cảm ơn bạn đã sử dụng!
            </MudText>
        </MudStack>
    </MudAlert>
</MudPopover>
@code {
    private bool _isOpen = false;
    private async Task OnClick()
    {
        _isOpen = !_isOpen;
        if (_isOpen)
        {
            await Task.Delay(2000);
            _isOpen = false;
        }
    }
}