@page "/"
@rendermode  InteractiveWebAssembly

<MudStack Style="@(string.IsNullOrWhiteSpace(_searchQuery) ? "height: calc((1 / 3)*(100vh - 50px))" : "")" Justify="Justify.FlexEnd">
    <MudGrid Class="mt-2" Justify="Justify.Center">
        <MudItem xs="12" md="6" lg="4">
            <SearchBar AutoStopCamera="true" @bind-Result="@_searchQuery"/>
        </MudItem>
        @if (!string.IsNullOrWhiteSpace(_searchQuery))
        {
            <MudItem xs="12" md="6" lg="4">
                <ThongTinMaQr Query="@_searchQuery"/>
            </MudItem>
        }
    </MudGrid>
</MudStack>
@code {
    private string? _searchQuery;
}