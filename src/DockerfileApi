FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS base
USER $APP_UID
WORKDIR /app
EXPOSE 8080
EXPOSE 8081

FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src
COPY ["Haihv.Elis.Tool.TraCuuGcn.Web-Api/Haihv.Elis.Tool.TraCuuGcn.Web-Api.csproj", "Haihv.Elis.Tool.TraCuuGcn.Web-Api/"]
COPY ["Haihv.Elis.Tool.TraCuuGcn.Models/Haihv.Elis.Tool.TraCuuGcn.Models.csproj", "Haihv.Elis.Tool.TraCuuGcn.Models/"]
RUN dotnet restore "./Haihv.Elis.Tool.TraCuuGcn.Web-Api/Haihv.Elis.Tool.TraCuuGcn.Web-Api.csproj"
COPY . .
WORKDIR "/src/Haihv.Elis.Tool.TraCuuGcn.Web-Api"
RUN dotnet build "Haihv.Elis.Tool.TraCuuGcn.Web-Api.csproj" -c $BUILD_CONFIGURATION -o /app/build

FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "./Haihv.Elis.Tool.TraCuuGcn.Web-Api.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Haihv.Elis.Tool.TraCuuGcn.Web-Api.dll"]
